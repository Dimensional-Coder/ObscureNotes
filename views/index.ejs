
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
    <script src="external/libraries-bundle.js"></script>
    <script src="index.js"></script>
  </head>
  <body>
    <% if(str) { %>
        <p>You supplied a value of <%= str %></p>
    <% } %>

    <div id="encrypt">
        <div>
            <label>
                Value to encrypt
                <input type="text" name="encrypt-value" id="encrypt-value">
            </label>
        </div>
        <div>
            <label>
                Encryption key
                <input type="text" name="encrypt-key" id="encrypt-key">
            </label>
        </div>

        <div id="encrypt-result">
            <p>Encrypted hex: <span id="encrypt-output"></span></p>
        </div>
    </div>

    

    <div id="decrypt">
        <div>
            <label>
                Hex to decrypt
                <input type="text" name="decrypt-value" id="decrypt-value">
            </label>
        </div>
        <div>
            <label>
                Decryption key
                <input type="text" name="decrypt-key" id="decrypt-key">
            </label>
        </div>

        <div id="decrypt-result">
            <p>Decrypted string: <span id="decrypt-output"></span></p>
        </div>
    </div>

  </body>
</html>
